<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layoutbg"
    android:padding="30dp"
    tools:context=".billingActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:id="@+id/vrf"
        android:layout_marginBottom="20dp"
        android:textSize="35sp"
        android:text="your request is being verified..."
        android:textColor="#000000"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vrf"
        android:text="You will be notified through the given email and phone number about the course within 48 hours"
        android:textSize="20sp"
        android:textColor="#000000"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/btn"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Pay"
        android:layout_centerInParent="true"
        android:onClick="payintent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Home"
        android:background="@drawable/btn"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="18sp"
        android:onClick="backtohome"/>


</RelativeLayout>