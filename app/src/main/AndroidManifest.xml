<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.udemyat40">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/udemyforty"
        android:label="Udemy @ 40"
        android:roundIcon="@drawable/udemyforty"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".finalActivity"></activity>
        <activity android:name=".paymentActivity" />
        <activity
            android:name=".courseActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".billingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".firstTime"
            android:screenOrientation="portrait" />
        <activity
            android:name=".request"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>